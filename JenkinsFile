pipeline {
    agent any

    stages {
        stage('Dependencies') {
            steps {
                
                echo 'Installing dependencies (e.g., in pom.xml)'
                //git branch: 'main', url: 'https://github.com/akhter05/PlaywrightWithPOM'                  
                powershell '''
                 mvn clean install -DskipTests -f pom.xml -X
                 '''
                
            }
        }

        stage('Regression Automation Test') {
            steps {
                
                    echo 'Running Regression Automation Tests...'
                    powershell '''
                     mvn clean test -Dsurefire.suiteXmlFiles=src/test/java/testrunners/testRegression.xml
                     '''
                
            }
        }

        stage('Publish Extent Report') {
            steps {
                script {
                    echo 'Publishing Extent Report...'
                    // Publish the extent report (modify as per your reporting setup)
                    publishHTML(target: [
                        keepAll: true,
                        reportDir: 'reports',
                        reportFiles: 'Test-Extent-Report.html',
                        reportName: 'Extent Report'
                    ])
                }
            }
        }
    }

    post {
        always {
            script {
                echo 'Pipeline Finished!'
                // Any cleanup tasks can be done here
            }
        }
    }
}
